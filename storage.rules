rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Helper function to check for a valid App Check token
    function isAppCheckVerified() {
      return request.app != null;
    }

    // Allow public read access for bike images
    match /bikes/{bikeId}/{fileName} {
      allow read: if true;
    }

    // Allow authenticated users to write bike photos, and allow public read
    match /bike-photos/{fileName} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // Allow authenticated users to write serial number photos, and allow public read
    match /serial-photos/{fileName} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // Allow authenticated users with a verified app to write to their own folder in 'user-uploads'
    match /user-uploads/{userId}/{fileName} {
      allow write: if request.auth != null && request.auth.uid == userId && isAppCheckVerified();
    }

    // Allow authenticated users to read and write within their own ownership-proofs folder,
    // including any subpaths.
    match /ownership-proofs/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Fallback rule: Disallow all other reads and writes by default
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
