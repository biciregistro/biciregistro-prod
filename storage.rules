rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Helper function to check for a valid App Check token
    function isAppCheckVerified() {
      return request.app != null;
    }

    // Allow public read access for bike images
    match /bikes/{bikeId}/{fileName} {
      allow read: if true;
    }

    // Allow authenticated users to write bike photos, and allow public read
    match /bike-photos/{fileName} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // Allow authenticated users to write serial number photos, and allow public read
    match /serial-photos/{fileName} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // Allow authenticated users with a verified app to write to their own folder in 'user-uploads'
    match /user-uploads/{userId}/{fileName} {
      allow write: if request.auth != null && request.auth.uid == userId && isAppCheckVerified();
    }

    // Allow authenticated users to read and write within their own ownership-proofs folder,
    // including any subpaths.
    match /ownership-proofs/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // --- Event Rules ---
    // Allow public read for event covers.
    // Allow authenticated users (ONGs) to upload covers.
    match /event-covers/{fileName} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // Allow public read for event sponsors.
    // Allow authenticated users (ONGs) to upload sponsor logos.
    match /event-sponsors/{fileName} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // NEW: Payout Proofs
    // Structure: /payout-proofs/{eventId}/{fileName}
    match /payout-proofs/{eventId}/{fileName} {
        allow read: if request.auth != null; // Authenticated users (Admin + ONG)
        allow write: if request.auth != null; // Strictly managed by backend usually, but client upload needs this. 
        // We rely on backend validation or client-side admin check for the upload action if client-direct.
    }

    // Homepage images
    match /homepage/{section}/{fileName} {
        allow read: if true;
        allow write: if request.auth != null; // Should be admin only ideally
    }

    // Landing Events Manager images (New Rule)
    match /landing-events/{section}/{fileName} {
        allow read: if true;
        allow write: if request.auth != null;
    }

    // Fallback rule: Disallow all other reads and writes by default
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
